@article{xiaoiknow2023,
author = {Xiao, Jingyu and Zou, Qingsong and Li, Qing and Zhao, Dan and Li, Kang and Weng, Zixuan and Li, Ruoyu and Jiang, Yong},
title = {I Know Your Intent: Graph-enhanced Intent-aware User Device Interaction Prediction via Contrastive Learning},
year = {2023},
