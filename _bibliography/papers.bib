author = {Yutao Dong and Qing Li and Kaidong Wu and Ruoyu Li and Dan Zhao and Gareth Tyson and Junkun Peng and Yong Jiang and Shutao Xia and Mingwei Xu},
title = {{HorusEye}: A Realtime {IoT} Malicious Traffic Detection Framework using Programmable Switches},
booktitle = {Proceedings of the 32nd USENIX Security Symposium (USENIX Security 23)},
year = {2023},
location = {Anaheim, CA, USA},
pages = {571--588},
pdf = {https://www.usenix.org/conference/usenixsecurity23/presentation/dong-yutao},
