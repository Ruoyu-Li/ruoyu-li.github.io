@INPROCEEDINGS{wusmartretro2018,
  author={Wu, Bo and Li, Qi and Xu, Ke and Li, Ruoyu and Liu, Zhuotao},
  booktitle={Proceedings of the 15th IEEE International Conference on Mobile Ad Hoc and Sensor Systems (MASS 18)}, 
  title={SmartRetro: Blockchain-Based Incentives for Distributed IoT Retrospective Detection}, 
